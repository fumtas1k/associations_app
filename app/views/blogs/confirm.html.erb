<% provide(:title, "blog confirm") %>
<h1>Blogs#confirm</h1>
<%= form_with(model: @blog, local: true, class: "blog-wrapper") do |f| %>
  <% if @blog.errors.any? %>
    <div class="alert alert-danger">
      <h3><%= @blog.errors.count %>件のエラーがあります。</h3>
      <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", "aria-describedby": "titleHelp", placeholder: "例: ビッグニュース", required: true, readonly: true %>
    <small id="titleHelp" class="form-text text-muted">空白禁止</small>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", "area-describedby": "contentHelp", placeholder: "今何してる？", required: true, maxlength: 140, readonly: true %>
    <small id="contentHelp" class="form-text text-muted">140文字制限</small>
  <%= f.submit "登録確認", class: "btn btn-primary" %>
  <%= f.submit "戻る", class: "btn btn-secondary", name: "back" %>
<% end %>