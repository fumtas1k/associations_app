<% provide(:title, "詳細") %>
<h1>詳細</h1>
<div class="show-wrapper">
  <div class="show-item">
    <div class="show-ttl">
      <h4>お名前</h4>
    </div>
    <div class="show-txt">
      <span><%= @user.name %></span>
    </div>
  </div>
  <div class="show-item">
    <div class="show-ttl">
      <h4>メールアドレス</h4>
    </div>
    <div class="show-txt">
      <span><%= @user.email %></span>
    </div>
  </div>
  <div class="btns-wrapper">
    <%= link_to "編集", edit_user_path(@user.id), class: "btn btn-info" %>
    <%= link_to "退会", user_path(@user.id), class: "btn btn-danger", method: :delete, data: {confirm: "本当に退会しますか？"} %>
  </div>
</div>

<div class="blogs-wrapper">
  <% @user.blogs.each do |blog| %>
    <%= render partial: "blogs/blog", locals: {blog: blog} %>
  <% end %>
</div>