<h1><% provide(:title, "signin") %></h1>

<div class="signform-wrapper">
  <%= form_with(scope: :session, url: sessions_path, local: true, class: "form-signin") do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", required: true, autofocus: true %>
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control", placeholder: "パスワード", required: true %>
    <div class="checkbox mb-3"></div>
    <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
</div>